<div data-section-id="{{- section.id -}}" class="w-screen bg-red-200 lg:flex">
  <div class="relative overflow-hidden lg:w-1/2 xl:w-2/5 product__img-swiper max-h-[75vh] lg:max-h-full">
    <div class="swiper-wrapper cursor-grab active:cursor-grabbing">
      <div class="swiper-slide">
        <img src="//source.unsplash.com/1024x768/?interior" alt="" width="" height="" loading="lazy" class="object-cover w-full h-full">
      </div>
      <div class="swiper-slide">
        <img src="//source.unsplash.com/1024x768/?interior" alt="" width="" height="" loading="lazy" class="object-cover w-full h-full">
      </div>
      <div class="swiper-slide">
        <img src="//source.unsplash.com/1024x768/?interior" alt="" width="" height="" loading="lazy" class="object-cover w-full h-full">
      </div>
    </div>
    <div class="absolute top-0 bottom-0 left-0 right-0 z-10 flex items-center justify-between duration-300 pointer-events-none select-none">
      <div class="flex items-center w-1/2 h-full pointer-events-auto md:w-1/3 hover:cursor-w-resize button-prev"></div>
      <div class="flex items-center justify-end w-1/2 h-full pointer-events-auto md:w-1/3 hover:cursor-e-resize button-next"></div>
    </div>
    <div class="swiper-pagination"></div>
  </div>
  
  <div class="h-full p-20 md:p-32 xl:px-40 lg:w-1/2 xl:w-3/5 xl:py-52">
    <div class="flex space-x-4 text-sm text-sans">
      {% for collection in product.collections %}
        <a href="{{ collection.url }}">
          <span>#{{ collection.title }}</span>
        </a>
      {% endfor %}
    </div>
    <h1 class="capitalize xl:text-7xl">{{ product.title }}</h1>
    <div class="mt-6 max-w-prose">
      {% if product.description.size > 0 %}
        {{ product.description }}
      {% else %}
        <p>
          Lorem ipsum dolor sit amet, consectetur adipisicing elit. Non animi, totam suscipit delectus inventore neque sequi minus quos perspiciatis ducimus qui molestias odit ut pariatur optio quam quas culpa veritatis!
        </p>
      {% endif %}
    </div>
    <button class="mt-12 btn">
      <span>{{ product.price | money }}</span>
      <span>â€¢</span>
      <span>Add to cart</span>
    </button>
  </div>
</div>


{% schema %}
{
  "name": "Product",
  "tag": "section",
  "class": "main_product",
  "settings": []
}
{% endschema %}
